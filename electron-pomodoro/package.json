{
  "name": "electron-pomodoro-app",
  "version": "1.0.0",
  "description": "pomodoro",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "pack:mac": "electron-builder build --mac"
  },
  "author": "maomao",
  "license": "ISC",
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13"
  },
  "dependencies": {
    "progressbar.js": "^1.1.0",
    "timer.js": "^1.0.4"
  },
  "build": {
    "appId": "com.maomao",
    "productName": "pomodoro",
    "files": "app",
    "asar": false,
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2022 dragon",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "background": "resources/background.png",
      "window": {
        "width": 250,
        "height": 350
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "resources/icon.icns",
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "icon": "resources/icon.icns"
    }
  }
}
